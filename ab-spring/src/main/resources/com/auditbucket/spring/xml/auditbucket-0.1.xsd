<xsd:schema xmlns="http://www.auditbucket.com/schema/spring/auditbucket"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://www.auditbucket.com/schema/spring/auditbucket"
            elementFormDefault="qualified">

    <xsd:element name="client">
        <xsd:annotation>
            <xsd:documentation><![CDATA[
			Configures an AB client in the application context.
		]]></xsd:documentation>
        </xsd:annotation>
        <xsd:complexType>
            <xsd:attribute name="id" type="xsd:string">
                <xsd:annotation>
                    <xsd:documentation><![CDATA[
					The bean id registered in the application context.
				]]></xsd:documentation>
                </xsd:annotation>
            </xsd:attribute>

            <xsd:attribute name="properties" type="xsd:string">
                <xsd:annotation>
                    <xsd:documentation><![CDATA[
					AB properties.
					example:
                       <util:map id="ab-properties">
                            <entry key="server.name" value="http://audit.auditbucket.com"/>
                            <entry key="ab.apikey" value="232efr-234-fffaa-3434d"/>
                            <entry key="ab.username" value="someuser"/>
                            <entry key="ab.password" value="somepass"/>
                            <entry key="fortress.name" value="MyDefaultFortress"/>
                        </util:map>

                        <auditbucket:client id="abClient" properties="ab-properties"/>
				]]></xsd:documentation>
                </xsd:annotation>
            </xsd:attribute>
        </xsd:complexType>
    </xsd:element>

</xsd:schema>
