<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
<!--FDEngine test logger-->
    <!-- Appenders -->
    <appender name="fde-console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[FD-E] %t %-5p: %c{2} - %m%n"/>
        </layout>
    </appender>

    <logger name="org.springframework">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.context">
        <level value="error"/>
    </logger>

    <logger name="org.springframework.beans">
        <level value="error"/>
    </logger>

    <logger name="org.springframework.transaction">
        <level value="error"/>
    </logger>

    <logger name="org.springframework.amqp.rabbit.listener.BlockingQueueConsumer">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.data.neo4j">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.amqp">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.integration">
        <level value="error"/>
    </logger>

    <logger name="org.hibernate">
        <level value="error"/>
    </logger>
    <logger name="org.apache">
        <level value="info"/>
    </logger>
    <logger name="net.sf.ehcache">
        <level value="info"/>
    </logger>
    <logger name="org.neo4j">
        <level value="info"/>
    </logger>
    <logger name="io.searchbox">
        <level value="info"/>
    </logger>
    <logger name="org.flockdata">
        <level value="${org.fd.logLevel}"/>
    </logger>

    <!-- Root Logger. If you're diagnosing integration test issues, up this value to debug -->
    <root>
        <priority value="${org.fd.logLevel}"/>
        <appender-ref ref="fde-console"/>
    </root>

</log4j:configuration>
