<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-amqp="http://www.springframework.org/schema/integration/amqp"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/integration/amqp
	                    http://www.springframework.org/schema/integration/amqp/spring-integration-amqp.xsd
		                http://www.springframework.org/schema/integration
		                http://www.springframework.org/schema/integration/spring-integration.xsd">
    <int:annotation-config/>

    <!-- RabbitMQ CONFIGURATION  -->
    <import resource="amqp-rabbit.xml"/>

    <!-- from RabbitMq to Ab-engine-->
    <int-amqp:inbound-gateway id="inboundGateway"
                              request-channel="searchResult"
                              queue-names="ab-engine.queue"
                              shutdown-timeout="3000"
                              acknowledge-mode="AUTO"
                              concurrent-consumers="50"
                              prefetch-count="10"
                              task-executor="AMQPPoolTaskExecutor"
                              receive-timeout="${request.timeout}"
                              connection-factory="connectionFactory"
                              message-converter="jsonToSearchResultConverter"/>

    <int-amqp:outbound-gateway
            request-channel="makeSearchRequest"
            reply-channel="nullChannel"
            routing-key="ab.search.binding"
            exchange-name="ab.search.exchange"
            reply-timeout="${reply.timeout}"
            amqp-template="amqpTemplate"/>

    <!--<int:outbound-channel-adapter id="idMakeSearch" channel="sendRequest" ref="abSearchGateway" >-->
    <!--</int:outbound-channel-adapter>-->


</beans>
