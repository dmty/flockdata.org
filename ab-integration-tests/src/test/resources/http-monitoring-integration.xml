<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xmlns:int-http="http://www.springframework.org/schema/integration/http"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/integration
       http://www.springframework.org/schema/integration/spring-integration.xsd
       http://www.springframework.org/schema/integration/http
	   http://www.springframework.org/schema/integration/http/spring-integration-http.xsd">

    <int:annotation-config/>

    <int:gateway id="abMonitoringGateway"
                 service-interface="com.auditbucket.engine.service.AbMonitoringGateway"/>

    <bean class="org.springframework.integration.http.inbound.UriPathHandlerMapping"/>

    <!-- Channels Definitions
         qExceutor must be declared in the Parent XML SI config XML.
    -->

    <int:channel id="doEsPingRequest">
        <int:dispatcher task-executor="qExecutor"/>
    </int:channel>

    <int:channel id="pingEsRequest"/>
    <int:channel id="pingEsReply"/>

    <int:json-to-object-transformer id="jsonToObject3"
                                    input-channel="doEsPingResponse"
                                    output-channel="pingEsReply"
                                    type="com.auditbucket.search.model.PingResult">
    </int:json-to-object-transformer>

    <int:object-to-json-transformer id="objectToJson3"
                                    input-channel="pingEsRequest"
                                    output-channel="doEsPingRequest"
                                    content-type="application/json">
    </int:object-to-json-transformer>

    <int-http:outbound-gateway request-channel="doEsPingRequest"
                               reply-channel="doEsPingResponse"
                               reply-timeout="${reply.timeout}"
                               url="${absearch.ping}"
                               http-method="GET"
                               extract-request-payload="true"
                               expected-response-type="java.lang.String" />

    <!-- Channels Definitions for Ping AB-Search ==> Ab-Engine -->
    <int:channel id="doAbEnginePingRequest"/>
    <int:channel id="doAbEnginePingResponse"/>

    <int-http:inbound-gateway request-channel="doAbEnginePingRequest"
                              reply-channel="doAbEnginePingResponse"
                              path="/monitoring/abPing"
                              reply-timeout="${reply.timeout}"
                              request-timeout="${request.timeout}"
                              supported-methods="GET"/>

</beans>
