{
  "mapping": {
    "_all": {
      "auto_boost": true
    },
    "_source": {
      "excludes": [
        "attachment"
      ]
    },
    "properties": {
      "code": {
        "type": "string",
        "boost": 2,
        "index": "not_analyzed",
        "doc_values": true,
        "norms": {
          "enabled": true
        }
      },
      "description": {
        "type": "string",
        "boost": 4
      },
      "docType": {
        "type": "string",
        "index": "not_analyzed",
        "doc_values": true
      },
      "fortress": {
        "type": "string",
        "index": "not_analyzed",
        "doc_values": true
      },
      "lastEvent": {
        "type": "string",
        "index": "not_analyzed",
        "doc_values": true
      },
      "metaKey": {
        "type": "string",
        "index": "not_analyzed",
        "doc_values": true
      },
      "tag": {
        "properties": {
          "term": {
            "type": "nested",
            "properties": {
              "code": {
                "type": "string",
                "boost": 3,
                "fields": {
                  "facet": {
                    "type": "string",
                    "boost": 5,
                    "index": "not_analyzed",
                    "doc_values": true,
                    "norms": {
                      "enabled": true
                    }
                  }
                }
              }
            }
          }
        }
      },
      "tags": {
        "type": "completion",
        "analyzer": "auto-complete",
        "payloads": false,
        "preserve_separators": true,
        "preserve_position_increments": false,
        "max_input_length": 50,
        "fields": {
          "facet": {
            "type": "string",
            "index": "not_analyzed",
            "doc_values": true
          }
        }
      },
      "timestamp": {
        "type": "date",
        "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
      },
      "whenCreated": {
        "type": "date",
        "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
      },
      "whenUpdated": {
        "type": "date",
        "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
      },
      "who": {
        "type": "string",
        "index": "not_analyzed"
      }
    }
  },
  "dynamic_templates": [
    {
      "inline_tag_code_template": {
        "path_match": "tag.*.code",
        "match_mapping_type": "string",
        "mapping": {
          "type": "multi_field",
          "fields": {
            "{name}": {
              "type": "string",
              "boost": "3.0",
              "index": "analyzed"
            },
            "facet": {
              "type": "string",
              "boost": "5.0",
              "doc_values": true,
              "index": "not_analyzed"
            }
          }
        }
      }
    },
    {
      "inline_tag_name_template": {
        "path_match": "tag.*.name",
        "match_mapping_type": "string",
        "mapping": {
          "type": "multi_field",
          "fields": {
            "{name}": {
              "type": "string",
              "boost": "3.0",
              "index": "analyzed"
            },
            "facet": {
              "type": "string",
              "boost": "5.0",
              "doc_values": true,
              "index": "not_analyzed"
            }
          }
        }
      }
    },
    {
      "geo_points": {
        "mapping": {
          "geohash": true,
          "geohash_precision": "1km",
          "type": "geo_point",
          "lat_lon": true
        },
        "match_mapping_type": "string",
        "path_match": "tag.*.geo.points.*"
      }
    },
    {
      "geo_code": {
        "mapping": {
          "type": "multi_field",
          "fields": {
            "{name}": {
              "index": "analyzed",
              "boost": "3.0",
              "type": "string"
            },
            "facet": {
              "index": "not_analyzed",
              "boost": "5.0",
              "type": "string",
              "doc_values": true
            }
          }
        },
        "match_mapping_type": "string",
        "path_match": "tag.*.geo.*.code"
      }
    },
    {
      "geo_name": {
        "mapping": {
          "type": "multi_field",
          "fields": {
            "{name}": {
              "index": "analyzed",
              "boost": "3.0",
              "type": "string"
            },
            "facet": {
              "index": "not_analyzed",
              "boost": "5.0",
              "type": "string",
              "doc_values": true
            }
          }
        },
        "match_mapping_type": "string",
        "path_match": "tag.*.geo.*.name"
      }
    }
  ]
}