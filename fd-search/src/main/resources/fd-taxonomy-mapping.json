{
  "mapping": {
    "properties": {
      "key": {
        "type": "string",
        "index": "not_analyzed",
        "doc_values": true
      },
      "fortress": {
        "type": "string",
        "index": "not_analyzed",
        "doc_values": true
      },
      "docType": {
        "type": "string",
        "index": "not_analyzed",
        "doc_values": true
      },
      "code": {
        "type": "string",
        "doc_values": true,
        "boost": "2.0",
        "index": "not_analyzed"
      },
      "name": {
        "type" : "string",
        "boost": "4.0",
        "fields": {
          "facet": {
            "type": "string",
            "boost": "8.0",
            "doc_values": true,
            "index": "not_analyzed"
          }
        }
      },
      "description": {
        "type": "string",
        "boost": 4
      },
      "lastEvent": {
        "type": "string",
        "index": "not_analyzed",
        "doc_values": true
      },
      "tag": {
        "properties": {
          "viewed": {
            "properties": {
              "term": {
                "type": "nested",
                "properties": {
                  "code": {
                    "type": "string",
                    "boost": 3,
                    "fields": {
                      "facet": {
                        "type": "string",
                        "boost": 5,
                        "index": "not_analyzed",
                        "doc_values": true,
                        "norms": {
                          "enabled": true
                        }
                      }
                    },
                    "parent": {
                      "properties": {
                        "category": {
                          "properties": {
                            "code": {
                              "type": "string",
                              "boost": 3,
                              "fields": {
                                "facet": {
                                  "type": "string",
                                  "boost": 5,
                                  "index": "not_analyzed",
                                  "doc_values": true,
                                  "norms": {
                                    "enabled": true
                                  }
                                }
                              }
                            }
                          }
                        },
                        "division": {
                          "properties": {
                            "code": {
                              "type": "string",
                              "boost": 3,
                              "fields": {
                                "facet": {
                                  "type": "string",
                                  "boost": 5,
                                  "index": "not_analyzed",
                                  "doc_values": true,
                                  "norms": {
                                    "enabled": true
                                  }
                                }
                              }
                            }
                          }
                        },
                        "interest": {
                          "properties": {
                            "code": {
                              "type": "string",
                              "boost": 3,
                              "fields": {
                                "facet": {
                                  "type": "string",
                                  "boost": 5,
                                  "index": "not_analyzed",
                                  "doc_values": true,
                                  "norms": {
                                    "enabled": true
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "tags": {
        "type": "completion",
        "analyzer": "auto-complete",
        "payloads": false,
        "preserve_separators": true,
        "preserve_position_increments": false,
        "max_input_length": 50,
        "fields": {
          "facet": {
            "type": "string",
            "index": "not_analyzed",
            "doc_values": true
          }
        }
      },
      "timestamp": {
        "type": "date"
      },
      "whenCreated": {
        "type": "date"
      },
      "whenUpdated": {
        "type": "date"
      },
      "who": {
        "type": "string",
        "index": "not_analyzed"
      }
    },
    "dynamic_templates": [
      {
        "inline_tag_code_template": {
          "match_mapping_type": "string",
          "path_match": "tag.*.code" ,
          "path_unmatch": "tag.viewed.*",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "inline_tag_name_template": {
          "match_mapping_type": "string",
          "path_match": "tag.*.parent.*.name",
          "path_unmatch": "tag.viewed.*",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_points": {
          "mapping": {
            "type": "geo_point",
            "lat_lon": true,
            "geohash": true,
            "geohash_precision": "1km"
          },
          "match_mapping_type": "string",
          "path_match": "tag.*.geo.points.*"
        }
      },
      {
        "geo_code": {
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          },
          "match_mapping_type": "string",
          "path_match": "tag.*.geo.*Code"
        }
      },
      {
        "geo_name": {
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          },
          "match_mapping_type": "string",
          "path_match": "tag.*.geo.*Name"
        }
      },
      {
        "inline_entity_tag_name_template": {
          "path_match": "e.*.tag.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "inline_entity_code_template": {
          "match_mapping_type": "string",
          "path_match": "e.*.code",
          "path_unmatch": "e.*.tag.*.code",
          "mapping": {
            "type": "string",
            "doc_values": true,
            "boost": "2.0",
            "index": "not_analyzed"
          }
        }
      },
      {
        "inline_entity_index_template": {
          "path_match": "e.*.index",
          "match_mapping_type": "string",
          "mapping": {
            "type": "string",
            "doc_values": true,
            "boost": "2.0",
            "index": "not_analyzed"
          }
        }
      },
      {
        "inline_entity_name_template": {
          "path_match": "e.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      }
    ]
  }
}