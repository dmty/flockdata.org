{
    "analysis": {
        "analyzer": {
            "auto-complete": {
                "type": "custom",
                "tokenizer": "standard",
                "filter": [ "standard",  "stop", "lowercase", "kstem" ]
            }
        },
        "filter": {
            "word_gram": {
                "type": "edge_ngram",
                "min_gram": 2,
                "max_gram": 6
            }
        }
    }
}