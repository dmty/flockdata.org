<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%t %-5p: %c - %m%n"/>
        </layout>
    </appender>

    <!-- 3rdparty Loggers -->
    <logger name="org.elasticsearch.cluster">
        <level value="error"/>
    </logger>

    <logger name="org.elasticsearch">
        <level value="info"/>
    </logger>

    <logger name="org.apache.lucene">
        <level value="info"/>
    </logger>

    <logger name="org.hibernate">
        <level value="error"/>
    </logger>

    <logger name="netty">
        <level value="error"/>
    </logger>

    <logger name="org.codehaus.jackson">
        <level value="info"/>
    </logger>

    <logger name="org.apache">
        <level value="info"/>
    </logger>

    <logger name="org.springframework">
        <level value="error"/>
    </logger>

    <logger name="org.springframework.amqp">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.amqp.rabbit.listener.BlockingQueueConsumer">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.integration.channel.NullChannel">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.integration.endpoint.PollingConsumer">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.integration">
        <level value="info"/>
    </logger>

    <logger name="org.flockdata">
        <level value="${org.fd.logLevel}"/>
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="${org.fd.logLevel}"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
