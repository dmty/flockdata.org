{
  "mapping": {
    "properties": {
      "key": {
        "type": "keyword",
        "doc_values": true,
        "store": false
      },
      "fortress": {
        "type": "keyword",
        "doc_values": true
      },
      "docType": {
        "type": "keyword"
      },
      "code": {
        "type": "keyword",
        "boost": "2.0"
      },
      "name": {
        "type": "keyword",
        "boost": "4.0",
        "fields": {
          "text": {
            "type": "text",
            "boost": "8.0"
          }
        }
      },
      "description": {
        "type": "text",
        "boost": 4
      },
      "lastEvent": {
        "type": "keyword",
        "doc_values": true
      },
      "timestamp": {
        "type": "date"
      },
      "whenCreated": {
        "type": "date"
      },
      "whenUpdated": {
        "type": "date"
      },
      "who": {
        "type": "keyword"
      },
      "tags": {
        "type": "keyword",
        "fields": {
          "suggest": {
            "type": "completion",
            "preserve_position_increments": false,
            "analyzer": "auto-complete"
          }
        }

      }
    },

    "dynamic_templates": [
      {
        "inline_tag_code_template": {
          "path_match": "tag.*.code",
          "match_mapping_type": "*",
          "mapping": {
            "type": "keyword",
            "fields": {
              "text": {
                "type": "text",
                "boost": "3.0"
              }
            }
          }
        }
      },
      {
        "inline_tag_name_template": {
          "path_match": "tag.*.name",
          "path_unmatch": "e.*.tag.*.name",
          "match_mapping_type": "*",
          "mapping": {
            "type": "keyword",
            "fields": {
              "text": {
                "type": "text",
                "boost": "3.0"
              }
            }
          }
        }
      },
      {
        "geo_points": {
          "path_match": "*tag.*.geo.points.*",
          "match_mapping_type": "string",
          "mapping": {
            "type": "geo_point",
            "lat_lon": true,
            "geohash": true,
            "geohash_precision": "1km"
          }
        }
      },
      {
        "geo_code": {
          "path_match": "*tag.*.geo.*.code",
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword",
            "fields": {
              "text": {
                "type": "text",
                "boost": "3.0"
              }
            }
          }
        }
      },
      {
        "geo_name": {
          "path_match": "*tag.*.geo.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword",
            "fields": {
              "text": {
                "type": "text",
                "boost": "3.0"
              }
            }
          }
        }
      },
      {
        "inline_entity_tag_code_template": {
          "path_match": "e.*.tag.*.code",
          "path_unmatch": "tag.*.code",
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword",
            "boost": "3.0",
            "fields": {
              "text": {
                "type": "text",
                "boost": "3.0"
              }
            }
          }
        }
      },
      {
        "inline_entity_tag_name_template": {
          "path_match": "e.*.tag.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword",
            "boost": "3.0",
            "fields": {
              "text": {
                "type": "text",
                "boost": "3.0"
              }
            }
          }
        }
      },
      {
        "inline_entity_code_template": {
          "path_match": "e.*.code",
          "path_unmatch": "e.*.tag.*.code",
          "mapping": {
            "type": "keyword",
            "boost": "2.0",
            "fields": {
              "text": {
                "type": "text",
                "boost": "2.0"
              }
            }
          }
        }
      },
      {
        "inline_entity_index_template": {
          "path_match": "e.*.index",
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword",
            "boost": "2.0"
          }
        }
      },
      {
        "inline_entity_name_template": {
          "path_match": "e.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword",
            "fields": {
              "text": {
                "type": "text"
              }
            }
          }
        }
      }
    ]
  }
}