{"mapping": {
    "_source": {
        "excludes": ["@attachment"]
    },
    "properties": {
        "@attachment": {
            "type": "attachment",
            "path": "full",
            "fields": {
                "@attachment": {
                    "type": "string",
                    "store": true,
                    "term_vector": "with_positions_offsets"

                }
            }
        },
        "@metaKey": {
            "type": "string",
            "index": "not_analyzed"
        },
        "@code": {
            "type": "string",
            "boost": "2.0",
            "index": "not_analyzed"
        },
        "@docType": {
            "type": "string",
            "index": "not_analyzed"
        },
        "@fortress": {
            "type": "string",
            "index": "not_analyzed"
        },
        "@lastEvent": {
            "type": "string",
            "index": "not_analyzed"
        },
        "@timestamp": {
            "type": "date",
            "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
        },
        "@whenCreated": {
            "type": "date",
            "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
        },

        "@description": {
            "type": "string",
            "boost": 4,
            "analyzer": "ngram_long"
        },
        "@when": {
            "type": "date"
        },
        "@who": {
            "type": "string",
            "index": "not_analyzed"
        }
    },

    "dynamic_templates": [
        {
            "fd.tag-template": {
                "match": "@tag.*.code",
                "mapping": {
                    "type": "nested"
                }
            }
        },
        {
            "nested_tag": {
                "path_match":"@tag.*.code",
                "match_mapping_type": "string",
                "mapping":{
                    "type": "string",
                    "doc_values": true,
                    "boost": 3.0,
                    "index": "not_analyzed",
                    "store": "true"
                }
            }
        }
    ]

}}