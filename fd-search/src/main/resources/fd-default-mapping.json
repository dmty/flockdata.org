{
  "mapping": {
    "_source": {
      "excludes": ["attachment"]
    },
    "properties": {
      "attachment": {
        "type": "attachment",
        "path": "full",
        "fields": {
          "attachment": {
            "type": "string",
            "store": true,
            "term_vector": "with_positions_offsets"
          }
        }
      },
      "metaKey": {
        "type": "string",
        "doc_values": true,
        "store": false,
        "index": "not_analyzed"
      },
      "code": {
        "type": "string",
        "doc_values": true,
        "boost": "2.0",
        "index": "not_analyzed"
      },
      "docType": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "fortress": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "lastEvent": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "timestamp": {
        "type": "date",
        "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
      },
      "whenCreated": {
        "type": "date",
        "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
      },
      "description": {
        "type": "string",
        "boost": 4,
        "analyzer": "ngram_long"
      },
      "when": {
        "type": "date"
      },
      "who": {
        "type": "string",
        "index": "not_analyzed"
      }
    },
    "dynamic_templates": [
      {
        "nested_tag": {
          "match": "tag.*",
          "mapping": {
            "type": "nested"
          }
        }
      },
      {
        "nested_tag_code_template": {
          "path_match": "tag.*.code",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "nested_tag_name_template": {
          "path_match": "tag.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_points": {
          "path_match": "tag.*.geo.points.*",
          "match_mapping_type": "string",
          "mapping": {
            "type": "geo_point",
            "lat_lon": true,
            "geohash": true,
            "geohash_precision": "1km"
          }
        }
      },
      {
        "geo_city": {
          "path_match": "tag.*.geo.city",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_iso": {
          "path_match": "tag.*.geo.iso*",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_country": {
          "path_match": "tag.*.geo.country",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_country": {
          "path_match": "tag.*.geo.country",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_country": {
          "path_match": "tag.*.geo.state",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "string",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "string",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      }
    ]
  }
}