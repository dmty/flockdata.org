{
  "mapping": {
    "_source": {
      "excludes": ["attachment"]
    },
    "properties": {
      "attachment": {
        "type": "attachment",
        "path": "full",
        "fields": {
          "attachment": {
            "type": "string",
            "store": true,
            "term_vector": "with_positions_offsets"
          }
        }
      },

      "metaKey": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "code": {
        "type": "string",
        "doc_values": true,
        "boost": "2.0",
        "index": "not_analyzed"
      },
      "docType": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "fortress": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "lastEvent": {
        "type": "string",
        "doc_values": true,
        "index": "not_analyzed"
      },
      "timestamp": {
        "type": "date",
        "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
      },
      "whenCreated": {
        "type": "date",
        "format": "yyyy/MM/dd HH:mm:ss||yyyy/MM/dd||YYYY-mm-dd"
      },
      "description": {
        "type": "string",
        "boost": 4,
        "analyzer": "ngram_long"
      },
      "when": {
        "type": "date"
      },
      "who": {
        "type": "string",

        "index": "not_analyzed"
      }
    },
    "dynamic_templates": [
      {
        "geo_tag": {
          "path_match": "tag.*.geo",
          "match_mapping_type": "string",
          "mapping": {
            "type": "geo_point",
            "lat_lon": true,
            "geohash": true,
            "geohash_precision": "10km"
          }
        }
      },
      {
        "fd.tag-template": {
          "path_match": "tag.*.code",
          "mapping": {
            "type": "multi_field",

            "fields": {
              "code": {
                "index": "not_analyzed",
                "type": "string",
                "doc_values": true,
                "boost": 3.0,
                "store": "true"
              },
              "raw": {
                "index": "analyzed",
                "type": "string",
                "store": "true"
              }
            }
          }
        }
      }
    ]
  }
}