{
  "mapping": {
    "_source": {
      "excludes": ["attachment"]
    },
    "properties": {
      "attachment": {
        "type": "attachment",
        "path": "full",
        "fields": {
          "attachment": {
            "type": "string",
            "store": true,
            "term_vector": "with_positions_offsets"
          }
        }
      },
      "metaKey": {
        "type": "string",
        "index": "not_analyzed"
      },
      "code": {
        "type": "string",
        "boost": "2.0",
        "index": "not_analyzed"
      },
      "docType": {
        "type": "string",
        "index": "not_analyzed"
      },
      "fortress": {
        "type": "string",
        "index": "not_analyzed"
      },
      "lastEvent": {
        "type": "string",
        "index": "not_analyzed"
      },
      "timestamp": {
        "type": "date"
      },
      "whenCreated": {
        "type": "date"
      },
      "what": {
        "properties": {
          "code": {
            "type": "string",
            "boost": 2.0,
            "analyzer": "ngram_short"
          },
          "name": {
            "type": "string",
            "boost": 2.0,
            "analyzer": "ngram_medium"
          },
          "description": {
            "type": "string",
            "analyzer": "ngram_long"
          }
        }
      },
      "description": {
        "type": "string",
        "analyzer": "ngram_long"
      },
      "when": {
        "type": "date"
      },
      "who": {
        "type": "string",
        "index": "not_analyzed"
      }
    },

    "dynamic_templates": [
      {
        "nested_tag": {
          "match": "tag.*",
          "mapping": {
            "type": "nested"
          }
        }
      },
      {
        "nested_tag_code_template": {
          "path_match": "tag.*.code",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "{dynamic_type}",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "{dynamic_type}",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      }, {
        "nested_tag_name_template": {
          "path_match": "tag.*.name",
          "match_mapping_type": "string",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "{name}": {
                "type": "{dynamic_type}",
                "boost": "3.0",
                "index": "analyzed"
              },
              "facet": {
                "type": "{dynamic_type}",
                "boost": "5.0",
                "doc_values": true,
                "index": "not_analyzed"
              }
            }
          }
        }
      },
      {
        "geo_tag": {
          "path_match": "tag.*.geo.geoPoint",
          "match_mapping_type": "string",
          "mapping": {
            "type": "geo_point",
            "lat_lon": true,
            "geohash": true,
            "geohash_precision": "10km"
          }
        }
      }
    ]
  }
}
