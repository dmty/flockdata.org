{
  "mapping": {
    "_source": {
      "excludes": ["@attachment"]
    },
    "properties": {
      "@attachment": {
        "type": "attachment",
        "path": "full",
        "fields": {
          "@attachment": {
            "type": "string",
            "store": true,
            "term_vector": "with_positions_offsets"
          }
        }
      },
      "@tags": {
        "type": "string",
        "dynamic": true
      },
      "@metaKey": {
        "type": "string",
        "index": "not_analyzed"
      },
      "@code": {
        "type": "string",
        "boost": "2.0",
        "index": "not_analyzed"
      },
      "@docType": {
        "type": "string",
        "index": "not_analyzed"
      },
      "@fortress": {
        "type": "string",
        "index": "not_analyzed"
      },
      "@lastEvent": {
        "type": "string",
        "index": "not_analyzed"
      },
      "@timestamp": {
        "type": "date"
      },
      "@whenCreated": {
        "type": "date"
      },
      "@what": {
        "properties": {
          "code": {
            "type": "string",
            "boost": 2.0,
            "analyzer": "ngram_short"
          },
          "name": {
            "type": "string",
            "boost": 2.0,
            "analyzer": "ngram_medium"
          },
          "description": {
            "type": "string",
            "analyzer": "ngram_long"
          }
        }
      },
      "@description": {
        "type": "string",
        "analyzer": "ngram_long"
      },
      "@when": {
        "type": "date"
      },
      "@who": {
        "type": "string",
        "index": "not_analyzed"
      }
    },
    "dynamic_templates": [
      {
        "fd.tag-template": {
          "path_match": "@tag.*.code",
          "mapping": {
            "type": "multi_field",
            "fields": {
              "code": {
                "index": "not_analyzed",
                "type": "string",
                "store": "true"
              },
              "analyzed": {
                "index": "analyzed",
                "type": "string",
                "store": "true"
              }
            }
          }
        }
      },
      {
        "geo_tag": {
          "path_match": "@tag.*.geo",
          "match_mapping_type": "string",
          "mapping": {
            "type": "geo_point",
            "lat_lon": true,
            "geohash": true,
            "geohash_precision": "10km"
          }
        }
      }
    ]
  }
}
