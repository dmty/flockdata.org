<ehcache>

    <defaultCache
            maxElementsInMemory="200"
            eternal="false"
            timeToIdleSeconds="120"
            timeToLiveSeconds="120"
            memoryStoreEvictionPolicy="LRU"/>


    <cache name="fortress"
           maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LFU"/>

    <cache name="documentType"
           maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LFU"/>

    <cache name="company"
           maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LFU"/>

    <cache name="companyTag"
           maxElementsInMemory="10000"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="geoData"
           maxElementsInMemory="5000"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="geoQuery"
           maxElementsInMemory="50"
           eternal="true"
           memoryStoreEvictionPolicy="LFU"/>


    <cache name="fortressDocType"
           maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LFU"/>

    <cache name="com.stormpath.sdk.directory.CustomData" maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="com.stormpath.sdk.application.Application" maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="com.stormpath.sdk.account.Account" maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="com.stormpath.sdk.group.Group" maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="fortressUser"
           maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="companyEvent"
           maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="sysUserApiKey"
           maxElementsInMemory="200"
           eternal="true"
           memoryStoreEvictionPolicy="LFU"/>

    <!--Caching the fact we have created this label index already-->
    <cache name="labels"
           maxElementsInMemory="1000"
           eternal="true"
           memoryStoreEvictionPolicy="LRU"/>

</ehcache>