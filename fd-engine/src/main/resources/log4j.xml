<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%t %-5p: %c - %m%n"/>
        </layout>
    </appender>

    <!-- 3rdparty Loggers -->
    <logger name="org.elasticsearch">
        <level value="info"/>
    </logger>

    <logger name="org.apache.lucene">
        <level value="info"/>
    </logger>

    <logger name="org.hibernate">
        <level value="error"/>
    </logger>

    <logger name="netty">
        <level value="error"/>
    </logger>

    <logger name="net.sf.ehcache">
        <level value="info"/>
    </logger>

    <logger name="org.jboss">
        <level value="info"/>
    </logger>

    <logger name="org.codehaus.jackson">
        <level value="info"/>
    </logger>

    <logger name="org.springframework">
        <level value="error"/>
    </logger>
    <!--<logger name="org.springframework.retry.support.RetryTemplate">-->
        <!--<level value="debug"/>-->
    <!--</logger>-->
    <logger name="org.springframework.integration.channel.NullChannel">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.amqp">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.amqp.rabbit.listener.BlockingQueueConsumer">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.integration">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.integration.endpoint.PollingConsumer">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.scheduling">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.data">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.integration.mapping">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.context">
        <level value="error"/>
    </logger>

    <logger name="org.springframework.web">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.beans">
        <level value="error"/>
    </logger>
    <logger name="org.springframework.transaction">
        <level value="error"/>
    </logger>

    <logger name="org.springframework.security">
        <level value="error"/>
    </logger>

    <logger name="com.sun.jersey.server">
        <level value="error"/>
    </logger>

    <logger name="com.jersey">
        <level value="error"/>
    </logger>

    <logger name="org.eclipse">
        <level value="error"/>
    </logger>

    <logger name="o.e.jetty">
        <level value="error"/>
    </logger>

    <logger name="org.springframework.data.neo4j.support.query">
        <level value="info"/> <!-- turn this on to see erer statements")-->
    </logger>

    <logger name="org.neo4j.cypher">
        <level value="debug"/>
    </logger>

    <logger name="org.flockdata">
        <level value="${fd.logLevel}"/>
    </logger>

    <logger name="org.flockdata.engine.tag.model">
        <level value="info"/>
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="${fd.logLevel}"/>
        <appender-ref ref="console"/>
    </root>

</log4j:configuration>
