<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%t %-5p: %c - %m%n"/>
        </layout>
    </appender>

    <logger name="org.elasticsearch">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.data.neo4j.support.query">
        <level value="info"/>  <!-- set to DEBUG to see Cypher statements-->
    </logger>
    <logger name="org.neo4j">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.data.neo4j">
        <level value="info"/>
    </logger>

    <logger name="org.springframework">
        <level value="error"/>
    </logger>
    <logger name="org.apache">
        <level value="error"/>
    </logger>

    <logger name="org.hibernate">
        <level value="error"/>
    </logger>

    <logger name="org.flockdata.engine.schema">
        <level value="debug"/>
    </logger>
    <logger name="org.flockdata.engine.tag">
        <level value="debug"/>
    </logger>
    <logger name="org.flockdata.company">
        <level value="info"/>
    </logger>
    <logger name="org.flockdata.engine.track">
        <level value="info"/>
    </logger>
    <logger name="org.flockdata.kv.KvManager">
        <level value="info"/>
    </logger>
    <logger name=" org.flockdata.engine.track.service.TrackServiceNeo4j">
        <level value="info"/>
    </logger>

    <!-- Root Logger -->
    <logger name="org.flockdata">
        <level value="${fd.logLevel}"/>
    </logger>


    <root>
        <priority value="${fd.logLevel}"/>
        <appender-ref ref="console"/>
    </root>


</log4j:configuration>
